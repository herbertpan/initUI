<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.panmeilong.test1.MainActivity"
    tools:showIn="@layout/activity_main">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="112dp"
        android:paddingTop="@dimen/toolbar_padding_top"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:background="#30469b">

        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="@string/app_name"/>

    </android.support.v7.widget.Toolbar>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="37">

            <RelativeLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="18"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="0dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="0dp"
                    android:divider="@drawable/list_divider_color_thin"
                    android:showDividers="middle">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="19">
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="20"
                        android:divider="@drawable/list_divider_color_thin"
                        android:showDividers="middle">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="11">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <Button
                                    android:id="@+id/othersinfo_add_friend"
                                    android:text="加为好友"
                                    android:textColor="#FFFFFF"
                                    android:textSize="15sp"
                                    android:layout_width="87dp"
                                    android:layout_height="27dp"
                                    android:background="@drawable/othersinfo_round_corner"
                                    android:layout_marginTop="12dp"
                                    android:layout_alignParentRight="true"
                                    android:layout_marginRight="65dp"/>

                                <Button
                                    android:id="@+id/othersinfo_follow"
                                    android:text="+关注"
                                    android:textColor="#FFFFFF"
                                    android:textSize="15sp"
                                    android:layout_width="87dp"
                                    android:layout_height="27dp"
                                    android:background="@drawable/othersinfo_round_corner"
                                    android:layout_centerHorizontal="true"/>
                            </RelativeLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="9">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="个性签名"
                                android:id="@+id/textView"
                                android:layout_weight="1"
                                android:gravity="left|center_vertical"
                                android:paddingLeft="14dp"
                                android:textSize="15sp"
                                android:textColor="@color/cl_abb1bd"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="请依旧强烈的关注"
                                tools:text="请依旧强烈的关注"
                                android:id="@+id/textView2"
                                android:layout_weight="2"
                                android:gravity="left|center_vertical"
                                android:textSize="15sp"
                                android:textColor="@color/cl_333333"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:id="@+id/imageView2"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="41dp"/>

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="53"
            android:divider="@drawable/list_divider_color"
            android:showDividers="middle|beginning">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:divider="@drawable/list_divider_color_thin"
                android:showDividers="middle"
                android:layout_weight="1"
                android:focusable="true">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text=" 他建的地标"
                        android:id="@+id/textView7"
                        android:layout_marginLeft="19dp"
                        android:gravity="center_vertical"
                        android:layout_marginRight="100dp"
                        android:layout_weight="3"
                        android:textSize="16sp"/>


                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="5"
                        android:id="@+id/textView6"
                        android:layout_weight="3"
                        android:gravity="center_vertical|center_horizontal"
                        android:textColor="@color/grey_font"
                        android:textSize="40sp"
                        android:paddingLeft="8dp"/>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:divider="@drawable/list_divider_color_thin"
                        android:layout_weight="7"
                        android:showDividers="middle">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:text="金地中心22层"
                            android:id="@+id/textView8"
                            android:layout_weight="1"
                            android:layout_marginLeft="18dp"
                            android:layout_marginRight="18dp"
                            android:gravity="center_vertical"
                            android:textColor="#333333"
                            android:textSize="16sp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:text="复仇者联盟"
                            android:id="@+id/textView9"
                            android:layout_weight="1"
                            android:layout_marginLeft="18dp"
                            android:layout_marginRight="18dp"
                            android:gravity="center_vertical"
                            android:textColor="#333333"
                            android:textSize="16sp"/>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>
